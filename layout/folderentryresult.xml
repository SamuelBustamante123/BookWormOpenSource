<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:color="@color/blue2"
        android:background="@color/blue2"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <TextView style="@style/whitebold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textSize="36sp" />

    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="300dp">
        <EditText
            android:id="@+id/FolderForm"
            android:inputType="text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="75dp"
            android:layout_marginRight="10dp"
            android:freezesText="true"
            android:gravity="left"
            android:hint="@string/FolderName"
            />
        <TextView style="@style/blackmed"
            android:layout_width="fill_parent"
            android:layout_marginLeft="75dp"
            android:layout_height="200dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:text="@string/CreateFolder"/>
        <Button
            android:id="@+id/folderentrybutton"
            style="@style/button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookPubDate"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="170dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/btnSave" />

    </RelativeLayout>


</LinearLayout>