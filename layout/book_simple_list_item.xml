<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:padding="2dp">

	<!--  android:layout_height="?android:attr/listPreferredItemHeight" -->

	<!-- comment out the ImageView if you can't get the image over in time -->

	<ImageView android:id="@+id/list_items_item_image"
		android:layout_width="54dp" android:layout_height="70dp"
		android:minWidth="54dp" android:minHeight="70dp"
		android:layout_marginRight="10dp" android:background="@drawable/border1" />

	<TextView
		android:id="@+id/book_item_text_1"
		style="@style/blacksmall"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:textSize="16sp"
		android:layout_toRightOf="@id/list_items_item_image"
		android:layout_marginBottom="1dp" />

	<TextView android:id="@+id/book_item_text_2"
		android:layout_marginTop="1dp" android:layout_marginBottom="5dp"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_toRightOf="@id/list_items_item_image"
		android:textSize="12sp"
		android:layout_below="@id/book_item_text_1"
		style="@style/blacksmall" />

</RelativeLayout>