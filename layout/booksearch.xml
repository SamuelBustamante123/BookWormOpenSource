<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:paddingBottom="12dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="70dp"
		android:color="@color/blue2"
		android:background="@color/blue2"
		android:gravity="bottom|center"
		android:orientation="horizontal">

		<TextView style="@style/whitebold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="@string/app_name"
			android:textAlignment="center"
			android:textSize="36sp" />
	</LinearLayout>

	<TextView android:id="@+id/bookentrysearchinputlabel"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginTop="15dp" android:layout_marginLeft="10dp"
		style="@style/black" android:gravity="center_horizontal"
		android:textSize="24sp"
		android:text="@string/labelSearch" />

	<RelativeLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center">
		<EditText android:id="@+id/bookentrysearchinput"
			android:background="@drawable/border1"
			android:layout_width="260dp" android:layout_height="wrap_content"
			android:layout_marginTop="15dp" android:layout_marginBottom="5dp"
			android:layout_marginLeft="8dp" android:layout_marginRight="1dp"
			android:layout_centerHorizontal="true"
			android:autoText="true" android:freezesText="true" />

		<Button
			android:id="@+id/bookentrysearchbutton"
			style="@style/button"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_below="@id/bookentrysearchinput"
			android:layout_centerHorizontal="true"
			android:layout_gravity="center"
			android:layout_marginLeft="3dp"
			android:layout_marginRight="8dp"
			android:layout_marginBottom="5dp"
			android:text="@string/btnSearch" />
	</RelativeLayout>

	<ListView
		android:id="@+id/bookentrysearchresultlist"
		android:layout_width="fill_parent"
		android:layout_height="515dp"
		android:layout_below="@id/bookentrysearchbutton"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:cacheColorHint="#FFFFFF" />

</LinearLayout>
